{
  "name": "arcane_codex_ts",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "playwright test",
    "test:api": "playwright test --project=multiplayer-api",
    "test:socketio": "playwright test --project=multiplayer-socketio",
    "test:e2e": "playwright test --project=multiplayer-e2e",
    "test:ui-tests": "playwright test --project=multiplayer-ui",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report test-results/html",
    "test:database": "playwright test tests/database",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"tests/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"tests/**/*.{ts,js}\"",
    "migrate": "ts-node src/database/migrate.ts",
    "migrate:rollback": "ts-node src/database/migrate.ts rollback",
    "db:seed": "ts-node src/database/seed.ts",
    "docker:build": "docker build -t arcane-codex .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app"
  },

# The Arcane Codex - Environment Variables
# Copy this file to .env and fill in your values

# ========== NODE.JS BACKEND API CONFIGURATION ==========
NODE_PORT=3000
NODE_ENV=development
SESSION_SECRET=your-secret-key-here-change-this-in-production

# CORS allowed origins (comma-separated, or use * for all)
# Example: http://localhost:5000,http://localhost:3000
CORS_ORIGINS=http://localhost:5000,http://localhost:3000

# ========== FLASK CONFIGURATION ==========
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=false
HOST=0.0.0.0
PORT=5000

# ========== DATABASE ==========
DB_PATH=arcane_codex.db
DB_POOL_SIZE=20
DB_TIMEOUT=30

# ========== REDIS CACHE ==========
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300

# ========== SECURITY ==========
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# ========== PERFORMANCE ==========
MAX_CONCURRENT_GAMES=100
RECONNECT_TIMEOUT_MINUTES=10
SOCKETIO_ASYNC_MODE=eventlet

# ========== ANTHROPIC API (for AI GM) ==========
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ========== MONITORING (optional) ==========
SENTRY_DSN=
LOG_LEVEL=INFO

# ========== PRODUCTION SETTINGS ==========
PRODUCTION=true
SSL_ENABLED=true
